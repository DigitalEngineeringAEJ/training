<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="menu_projekt_form12" model="website.menu">
        <field name="name">Gutachten</field>
        <field name="url">/gutachten_webform</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence">55</field>
    </record>


    <template id="search_gutachten" name="Suche Gutachten">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure">
                    <div class="container">
                        <form role="form" action="/tasks/public" method="POST">
                            <div class="form-group">
                                <label for="number" class="control-label">Nummer</label>
                                <input type="char" name="number" id="number"
                                       class="form-control" required="required"/>
                                </div>
                                <div class="clearfix oe_login_button">
                                    <button type="submit" class="btn-primary pull-left">Mein Gutachten Suchen Test Test</button>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>