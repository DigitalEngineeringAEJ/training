<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="menu_projekt_form12" model="website.menu">
        <field name="name">Gutachten</field>
        <field name="url">/gutachten_webform</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence">55</field>
    </record>

    <template id="search_gutachten" name="Suche Gutachten">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure">
                    <div class="container">
                        <form role="form" action="search/gutachten" method="POST">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="form-group">
                                <label for="kunden_name" class="control-label">Name</label>
                                <input type="text" name="kunden_name" t-att-value="kunden_name" id="kunden_name"
                                       class="form-control" placeholder="Bsp Name" required="required"/>
                            </div>
                            <div class="form-group">
                                <label for="project" class="control-label">Nummer</label>
                                <input type="text" name="email_id" t-att-value="email_id" id="email_id"
                                       class="form-control" required="required"/>
                            </div>
                            <div class="clearfix oe_login_button">
                                <button type="submit" class="btn-primary pull-left">Mein Gutachten Suchen</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>