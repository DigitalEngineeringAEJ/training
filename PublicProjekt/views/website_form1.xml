<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="menu_projekt_form12" model="website.menu">
        <field name="name">Gutachten</field>
        <field name="url">/gutachten_webform2</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence">60</field>
    </record>


    <template id="search_gutachten2" name="Suche Gutachten">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure">
                    <div class="container">
                        <form role="form" action="/search/gutachten2" method="POST">
<!--                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>-->
                            <div class="form-group">
                                <label for="partner_id" class="control-label">Name</label>
                                <input type="text" name="partner_id" id="partner_id"
                                       class="form-control" placeholder="Bsp Name" required="required"/>
                            </div>
                            <div class="form-group">
                                <label for="project" class="control-label">Nummer</label>
                                <input type="search" name="name" id="name"
                                       class="form-control" required="required"/>
                            </div>
                            <div class="form-group">
                                <label for="project_task" class="control-label">Gutachten</label>
                                <select name="project_task" class="form-control link-style">
                                    <t t-foreach='project_rec' t-as="task">
                                        <option t-esc='project.task' t-att-values='project.project'/>
                                    </t>
                                </select>
                            </div>
                            <div class="clearfix oe_login_button">
                                <button type="submit" class="btn-primary pull-left">Mein Gutachten Suchen</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>